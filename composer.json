{
  "name": "arctouch/upcoming-movies",
  "description": "Upcoming Movies",
  "license": "MIT",
  "authors": [
    {
      "name": "Adriano Ferreira",
      "email": "adrianokta@gmail.com"
    }
  ],
  "require": {
    "php": ">=5.6",
    "slim/slim": "^3.1",
    "slim/php-view": "^2.0",
    "monolog/monolog": "^1.17",
    "ext-curl": "*",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": ">=5.0"
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "process-timeout": 0,
    "sort-packages": true
  },
  "scripts": {
    "start": "php -S localhost:8080 -t public",
    "test": "phpunit"
  },
  "autoload": {
    "psr-4": {"App\\": "src/"}
  }
}
